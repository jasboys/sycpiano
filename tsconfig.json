{
    "compileOnSave": false,
    "compilerOptions": {
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017"
        ],
        "module": "es2015",
        "target": "es2017",
        "jsx": "react",
        "allowJs": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "outDir": "./web/build",
        "baseUrl": "./web"
    },
    "include": [
        "./web/js"
    ]
}