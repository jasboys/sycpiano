{
    "compileOnSave": false,
    "compilerOptions": {
        "lib": [
            "es2015",
            "es2016",
            "es2017"
        ],
        "paths": {
            "*": [
                "node_modules/*",
                "node_modules/@types/*",
                "@types/*",
                "server/src/*"
            ]
        },
        "types": [
            "bluebird-global"
        ],
        "typeRoots": [
            "node_modules/@types",
            "@types"
        ],
        "module": "commonjs",
        "target": "es2017",
        "allowJs": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": false,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "outDir": "build",
        "baseUrl": "..",
    },
    "exclude": [
        "**/node_modules/*"
    ],
    "include": [
        "./src/**/*.ts"
    ]
}