{
    "compileOnSave": false,
    "compilerOptions": {
        "lib": [
            "esnext"
        ],
        "paths": {
            "*": [
                "node_modules/*",
                "node_modules/@types/*",
                "@types/*",
            ]
        },
        "typeRoots": [
            "node_modules/@types",
            "@types",
        ],
        "module": "ESNext",
        "target": "ESNext",
        "allowJs": true,
        "moduleResolution": "NodeNext",
        "strict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": false,
        "skipLibCheck": true,
        "outDir": "build",
        "baseUrl": ".",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true
    },
    "ts-node": {
        "esm": true
    },
    "exclude": [
        "**/node_modules/*",
        "../@types"
    ],
    "include": [
        "./src"
    ]
}