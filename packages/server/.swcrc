{
    "$schema": "https://json.schemastore.org/swcrc",
    "jsc": {
        "parser": {
            "syntax": "typescript",
            "tsx": true,
            "dynamicImport": true,
            "decorators": true
        },
        "paths": {
            "@src/*": ["./*"],
            "*": [
                "node_modules/*",
                "@types/*"
            ]
        },
        "baseUrl": "./src",
        "target": "esnext",
        "transform": {
            "legacyDecorator": true,
            "decoratorMetadata": true
        },
        "preserveAllComments": true
    },
    "sourceMaps": "inline",
    "module": {
        "type": "es6"
    }
}
