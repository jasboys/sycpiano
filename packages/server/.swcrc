{
    "$schema": "https://json.schemastore.org/swcrc",
    "jsc": {
        "parser": {
            "syntax": "typescript",
            "tsx": true,
            "dynamicImport": true,
            "decorators": true
        },
        "paths": {
            "*": [
                "node_modules/*",
                "@types/*"
            ]
        },
        "baseUrl": "..",
        "target": "es2017",
        "transform": {
            "legacyDecorator": true,
            "decoratorMetadata": true
        }
    },
    "sourceMaps": "inline",
    "module": {
        "type": "es6"
    },
    "env": {
        "targets": {
            "node": "16"
        }
    }
}
